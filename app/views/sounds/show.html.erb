<div>
  <h1><%= @sound.title %></h1>
</div>

<div>
  <%= link_to "Click to listen", @sound.soundcloud_url %>
</div>

<div>
  <h2>Comments</h2>
  <% @sound.comments.each do |comment| %>
    <p>
      <strong>Comment:</strong>
      <%= comment.content %>
    </p>
  <% end %>

  <%= form_for @comment, {url: sound_comments_path(@sound)} do |f| %>
    <%= f.hidden_field :video_id, value: @sound.id %>
    <%= f.label :content, "Add a comment" %><br>
    <%= f.text_area :content, size: "60x12" %><br>
    <%= f.submit "add comment" %>
  <% end %>
</div>